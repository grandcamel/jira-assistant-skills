{
  "name": "jira-assistant-skills",
  "version": "2.1.0",
  "description": "Complete JIRA automation suite with 14 specialized skills - issue management, agile workflows, time tracking, service management, bulk operations, and more",
  "author": {
    "name": "grandcamel"
  },
  "repository": "https://github.com/grandcamel/jira-assistant-skills",
  "skills": [
    "./skills/jira-assistant/SKILL.md",
    "./skills/jira-issue/SKILL.md",
    "./skills/jira-lifecycle/SKILL.md",
    "./skills/jira-search/SKILL.md",
    "./skills/jira-collaborate/SKILL.md",
    "./skills/jira-agile/SKILL.md",
    "./skills/jira-relationships/SKILL.md",
    "./skills/jira-time/SKILL.md",
    "./skills/jira-jsm/SKILL.md",
    "./skills/jira-bulk/SKILL.md",
    "./skills/jira-dev/SKILL.md",
    "./skills/jira-fields/SKILL.md",
    "./skills/jira-ops/SKILL.md",
    "./skills/jira-admin/SKILL.md",
    "./skills/marketplace.md"
  ],
  "commands": [
    "./commands/jira-assistant-setup.md",
    "./commands/jira-discover-project.md",
    "./commands/browse-skills.md",
    "./commands/skill-info.md"
  ],
  "assistant_skills": {
    "requirements": "./skills/shared/scripts/lib/requirements.txt",
    "env_vars": [
      {
        "name": "JIRA_SITE_URL",
        "description": "Jira instance base URL (e.g., https://company.atlassian.net)",
        "required": true
      },
      {
        "name": "JIRA_EMAIL",
        "description": "Atlassian account email for authentication",
        "required": true
      },
      {
        "name": "JIRA_API_TOKEN",
        "description": "Atlassian API token (generate at id.atlassian.com/manage-profile/security/api-tokens)",
        "required": true
      },
      {
        "name": "JIRA_PROFILE",
        "description": "Configuration profile name for multi-instance support (optional, defaults to 'production')",
        "required": false
      }
    ]
  }
}
